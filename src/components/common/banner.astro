---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { Button } from "../ui/button";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="flex flex-col items-center pt-16 sm:pt-24 md:pt-36 pb-10 w-full max-w-4xl mx-auto"
>
  <span class="text-xl text-foreground font-medium mb-3">
    {t("banner.subtitle")}
  </span>
  <h1
    class="scroll-m-20 tracking-tight lg:text-5xl text-4xl md:text-6xl font-bold text-center text-balance"
  >
    {t("banner.title")}
  </h1>
  <p
    class="[&:not(:first-child)]:mt-6 text-center text-xl text-muted-foreground mt-4 mb-4 text-pretty"
  >
    {t("banner.description")}
  </p>
  <div class="flex flex-col sm:flex-row items-center gap-2 mt-4">
    <Button variant="outline" className="font-bold"> Ver repositorio </Button>
    <Button variant="default" className="font-bold">
      Conocer los estados http
    </Button>
  </div>
</section>
