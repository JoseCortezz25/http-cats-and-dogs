---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { Button } from "../ui/button";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="h-[calc(100dvh-73px)] flex flex-col items-center justify-center w-full max-w-4xl mx-auto px-4 md:px-0"
>
  <span class="text-xl text-foreground font-medium mb-3">
    {t("banner.subtitle")}
  </span>
  <h1
    class="scroll-m-20 tracking-tight lg:text-5xl text-4xl md:text-6xl font-bold text-center text-balance"
  >
    {t("banner.title")}
  </h1>
  <p
    class="[&:not(:first-child)]:mt-6 text-center text-xl text-muted-foreground mt-4 mb-4 text-pretty"
  >
    {t("banner.description")}
  </p>
  <div
    class="flex flex-col sm:flex-row items-center gap-2 mt-4 w-full md:w-auto"
  >
    <Button variant="outline" className="font-bold w-full md:w-auto">
      Ver repositorio
    </Button>
    <a href="#list" class="w-full md:w-auto">
      <Button variant="default" className="font-bold  w-full md:w-auto mx-auto">
        Conocer los estados http
      </Button>
    </a>
  </div>
</section>
